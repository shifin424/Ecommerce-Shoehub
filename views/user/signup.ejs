<%- include("../partials/headerBtsrp.ejs") -%> 

<body>

    <section class="vh-100" style="background-color: white;">
        <div class="container h-100" >
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
              <div class="card text-black" style="border-radius: 25px;">
                <div class="card-body p-md-5" style="background-color:#dbcc8f; border-radius: 15px;" >
                  <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
      
                      <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
                      <% if(locals.err_message){ %>
                      <p class="text-danger"><%=err_message%></p>
                       <% } %>
                      <form class="mx-1 mx-md-4" id="form" method="post" action="/postSignup">
      
                        <div class="d-flex flex-row align-items-center mb-4">
                          <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                          <div class="form-outline flex-fill mb-0">
                            <div class="text-danger" id="nameError"></div>
                            <input type="text" name="username" id="userName" class="form-control" placeholder="Your Name" style="border-radius: 5px;"/>
                            
                          </div>
                        </div>
      
                        <div class="d-flex flex-row align-items-center mb-4">
                          <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                          <div class="form-outline flex-fill mb-0">
                            <div class="text-danger" id="emailError"></div>
                            <input type="email" name="email" id="email" class="form-control" placeholder="Your Email" style="border-radius: 5px;"/>
                            
                          </div>
                        </div>

                        <div class="d-flex flex-row align-items-center mb-4">
                          <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                          <div class="form-outline flex-fill mb-0">
                            <div class="text-danger" id="phoneError"></div>
                            <input type="text" name="phonenumber" id="phoneNumber" class="form-control" placeholder="Your Phone Number" style="border-radius: 5px;"/>
                            
                          </div>
                        </div>
      
                        <div class="d-flex flex-row align-items-center mb-4">
                          <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                          <div class="form-outline flex-fill mb-0">
                            <div class="text-danger" id="passwordError"></div>
                            <input type="password" name="password" id="password" class="form-control" placeholder="Password" style="border-radius: 5px;"/>
                            
                          </div>
                        </div>
      
                        <div class="d-flex flex-row align-items-center mb-4">
                          <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                          <div class="form-outline flex-fill mb-0">
                            <div class="text-danger" id="conpasswordError"></div>
                            <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" placeholder="Repeat your password" style="border-radius: 5px;"/>
                            
                          </div>
                        </div>
      
      
                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                          <button type="submit" class="btn btn-success btn-lg">Register</button>
                        </div>
                        
                        <div class="form-check d-flex justify-content-center mb-5">
                          
                            <label class="form-check-label" for="form2Example3">
                              Already have an acoount? <a href="/login" style="text-decoration: none;"> Login</a>
                            </label>
                          </div>
      
                      </form>
      
                    </div>
                    <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
      
                        <img src="../images/logo.png"
                        class="img-fluid" alt="Sample image">
      
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <script src="../js/signupValidation.js">

      </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    
  
</body>
</html>

